<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <stroke android:width="2dip" android:color="#162B03" />
            <solid  android:color="#1F3A04"/>
        </shape>

    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <stroke android:width="2dip" android:color="#162B03" />
            <solid  android:color="#1F3A04"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="90"
                android:centerX="90%"
                android:centerColor="#0A410C"
                android:startColor="#28681A"
                android:endColor="#094E0C"
                android:type="linear" />
            <stroke android:width="2dip" android:color="#162B03" />
        </shape>
    </item>
</selector>