<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <stroke android:width="1dip" android:color="#383737" />
            <solid  android:color="#0B365A"/>
        </shape>

    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <stroke android:width="1dip" android:color="#383737" />
            <solid  android:color="#0B365A"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="90"
                android:centerX="90%"
                android:centerColor="#1562A7"
                android:startColor="#1552D1"
                android:endColor="#1367B1"
                android:type="linear" />
            <stroke android:width="1dip" android:color="#383737" />
        </shape>
    </item>
</selector>